.btn
  background var(--color--body)
  border-color var(--color--border-color)
  color var(--color--body-background)
  transition all .2s ease-in
  @extend $centered-inline-flex
  padding 10px 40px
  box-shadow 1px 2px 3px rgba(0,0,0,.17), 0 1px 4px rgba(0,0,0,.16)
  border-radius 4px
  text-transform uppercase
  font-size 14px
  line-height 24px
  border none
  cursor pointer
  text-decoration none
.btn--small
  padding 8px 20px
  font-size 12px

